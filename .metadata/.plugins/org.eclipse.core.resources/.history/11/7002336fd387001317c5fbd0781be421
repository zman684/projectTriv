#include "Question.h"
#include <fstream>

Question::Question(std::string text, int level,
		std::vector<std::string> answers, int rAnswer) {
	Question::text = text;
	Question::level = level;
	Question::answers = answers;
	Question::rightAnswer = rAnswer;
}

std::vector<Question> Question::getQuestions(std::string path) {
	std::string line;
	std::string delimiter = ",";
	std::string token = line.std::string::substr(0, line.std::string::find(delimiter));
	std::vector<Question> q;
	std::ifstream myfile(path);
	if (myfile.is_open()) {
		while (getline(myfile, line)) {
			if(line.)
			std::cout << line << '\n';
		}
		myfile.close();
	}
	std::vector<std::string> b(4);
	b.push_back("hello");
	b.push_back("helllo");
	Question a("hello", 1, b, 0);
	q.push_back(a);
	return q;
}
